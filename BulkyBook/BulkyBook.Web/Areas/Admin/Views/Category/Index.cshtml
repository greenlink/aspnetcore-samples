@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="60%">
                        @category.Name
                    </td>
                    <td width="20%">
                        @category.DisplayOrder
                    </td>
                    <td width="20%">
                        <div class="btn-group" role="group">
                            <div class="text-md-center">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                                class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i> Edit</a>
                            </div>
                            <div class="text-md-center">
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                                class="btn btn-danger mx-1"><i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>