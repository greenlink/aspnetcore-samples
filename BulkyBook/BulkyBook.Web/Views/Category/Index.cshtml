@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create category
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="50%">
                        @category.Name
                    </td>
                    <td width="30%">
                        @category.DisplayOrder
                    </td>
                    <td width="20%">
                        <div class="w-75 btn-group align-content-center" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                            class="btn btn-primary mx-2 align-self-center"> <i class="bi bi-pencil-square"> Edit</i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>